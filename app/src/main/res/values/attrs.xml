<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="StepBarView">
    <attr name="current_step" format="integer" />
    <attr name="circle_size" format="dimension" />
    <attr name="line_height" format="dimension" />
    <attr name="circle_resource" format="reference" />
    <attr name="line_resource" format="reference" />
  </declare-styleable>

  <declare-styleable name="CircularHorizontalProgressView">
    <attr name="emptyFillColor" format="color" />
    <attr name="progressFillColor" format="color" />
    <attr name="value" format="integer" />
  </declare-styleable>

  <!-- InternalNotificationLayout -->
  <declare-styleable name="InternalNotificationLayout">
    <attr name="androidMaxWidth" format="dimension" />
    <attr name="androidMaxActionInlineWidth" format="dimension" />
    <attr name="androidElevation" format="dimension" />
  </declare-styleable>

  <!-- PointsView -->
  <declare-styleable name="ScoreView">
    <attr name="svType" format="enum">
      <enum name="circular" value="0" />
      <enum name="rounded" value="1" />
    </attr>
    <attr name="score" format="integer" />
  </declare-styleable>
  <!-- PointsView -->
  <declare-styleable name="CheckWithTextViewStyleable">
    <attr name="text" format="string" />
    <attr name="subtitle" format="string" />
    <attr name="text_style" format="reference" />
  </declare-styleable>

  <declare-styleable name="PulsingLayout">
    <attr name="pulse_count" format="integer" />
    <attr name="pulse_duration" format="integer" />
    <attr name="pulse_color" format="color" />
    <attr name="pulse_repeat" format="integer" />
    <attr name="pulse_start_from_center" format="boolean" />
  </declare-styleable>

  <declare-styleable name="AngularChartView">
    <attr name="value1" format="integer" />
    <attr name="value2" format="integer" />
    <attr name="borderColor" format="color" />
    <attr name="value1Color" format="color" />
    <attr name="value2Color" format="color" />
    <attr name="legentTextSize" format="dimension" />
  </declare-styleable>

  <declare-styleable name="DonutProgress">
    <attr name="donut_progress" format="float" />
    <attr name="donut_max" format="integer" />

    <attr name="donut_unfinished_color" format="color" />
    <attr name="donut_finished_color" format="color" />

    <attr name="donut_finished_stroke_width" format="dimension" />
    <attr name="donut_unfinished_stroke_width" format="dimension" />

    <attr name="donut_text_size" format="dimension" />
    <attr name="donut_text_color" format="color" />

    <attr name="donut_prefix_text" format="string" />
    <attr name="donut_suffix_text" format="string" />
    <attr name="donut_text" format="string" />

    <attr name="donut_background_color" format="color" />

    <attr name="donut_inner_bottom_text" format="string" />
    <attr name="donut_inner_bottom_text_size" format="dimension" />
    <attr name="donut_inner_bottom_text_color" format="color" />

    <attr name="donut_circle_starting_degree" format="integer" />
    <attr name="donut_show_text" format="boolean" />
    <attr name="donut_inner_drawable" format="reference" />
  </declare-styleable>

  <declare-styleable name="ArcProgress">
    <attr name="progress1" format="integer" />
    <attr name="progress2" format="integer" />
    <attr name="orientation" format="boolean" />
    <attr name="angle" format="float" />
    <attr name="stroke_width" format="dimension" />

    <attr name="text_size" format="dimension" />
    <attr name="text_color" format="color" />
  </declare-styleable>

  <declare-styleable name="PieChart">
    <attr name="pieRotation" format="integer" />
  </declare-styleable>


  <declare-styleable name="PacPieChart">

    <attr name="sliceAntiAlias" format="boolean"/>
    <attr name="sliceDefaultColor" format="color"/>
    <attr name="sliceStrokeWidth" format="float"/>

    <attr name="lineAntiAlias" format="boolean" />
    <attr name="lineDefaultColor" format="color" />
    <attr name="lineStrokeWidth" format="float" />

    <attr name="activate_rotation" format="boolean"/>

  </declare-styleable>
</resources>
